// vim: ft=cpp

#define COMMA ,

#if defined(SHARK_MPI_COMM) || defined(SHARK_GPI_COMM)

SYMBT(shark::ndim::part_position)

#define SYMBD(d) SYMBT(shark::ndim::vec<d COMMA shark::ndim::part_position>)
#include "inst_dim"
#undef SYMBD

#define SYMBD(d) SYMBT(shark::ndim::part<d>)
#include "inst_dim"
#undef SYMBD
#define SYMBD(d) SYMBT(shark::ndim::coords_range<d>)
#include "inst_dim"
#undef SYMBD


#elif defined(SHARK_NO_COMM)

SYMBT(shark::ndim::part_position)

#define SYMBD(d) SYMBT(shark::ndim::vec<d COMMA shark::ndim::part_position>)
#include "inst_dim"
#undef SYMBD


#define SYMBD(d) SYMBT(shark::ndim::part<d>)
#include "inst_dim"
#undef SYMBD
#define SYMBD(d) SYMBT(shark::ndim::coords_range<d>)
#include "inst_dim"
#undef SYMBD

#else
#error "No comm defined"
#endif

#undef COMMA
